<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calarm" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/purple_dark</item>
        <item name="android:colorBackground">@color/purple_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Calarm.TimerButton" parent="Theme.Calarm">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Calarm.TimerButton.Dialog" parent="Theme.Calarm.TimerButton">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Calarm.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Calarm.Splash" parent="Theme.Calarm">
        <item name="windowSplashScreenBackground">@color/purple_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_icon_color</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/img_dev</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Calarm</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" >true</item>
        <item name="android:navigationBarColor">@color/purple_dark</item>
    </style>
</resources>