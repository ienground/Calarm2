<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="zone.ien.calarm.activity.TimerRingActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activity.AlarmRingActivity">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-1"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:gravity="center"
            android:fontFamily="@font/pretendard_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bg_timer_off"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="?attr/colorAccent"
            android:alpha="0.8"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ic_timer_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stop"
            android:contentDescription="@string/stop"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/bg_timer_off"
            app:layout_constraintEnd_toEndOf="@id/bg_timer_off"
            app:layout_constraintTop_toTopOf="@id/bg_timer_off"
            app:layout_constraintBottom_toBottomOf="@id/bg_timer_off" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>